import javax.swing.*; //input
import java.text.*; //formatting
public class PrimitivePrograms
{
    public static void main(String[] args)
    {
   	 //Problem #1: Average
   	 String number1=JOptionPane.showInputDialog("Input a number.");
   	 String number2=JOptionPane.showInputDialog("Input another number.");
   	 double firstNumber=Double.parseDouble(number1);
   	 double secondNumber=Double.parseDouble(number2);
   	 double average=(firstNumber+secondNumber)/2;
   	 System.out.println("The average of "+firstNumber+" and "+secondNumber+" is "+average);

   	 //Problem #2: Division
   	 String number3=JOptionPane.showInputDialog("Input a number.");
   	 String number4=JOptionPane.showInputDialog("Input another number.");
   	 int thirdNumber=Integer.parseInt(number3);
   	 int fourthNumber=Integer.parseInt(number4);
   	 int quotient=thirdNumber/fourthNumber;
   	 int remainder=thirdNumber%fourthNumber;
   	 System.out.println(thirdNumber+" divided by "+fourthNumber+" has a quotient of "+quotient
   		 +" with a remainder of "+remainder);

   	 //Problem #3: Total
   	 String book1=JOptionPane.showInputDialog("Input the cost of the first book.");
   	 String book2=JOptionPane.showInputDialog("Input the cost of the second book.");
   	 double firstBook=Double.parseDouble(book1);
   	 double secondBook=Double.parseDouble(book2);
   	 double currencyAmount=firstBook+secondBook;
   	 System.out.println("The cost of your two books is $"+currencyAmount);

   	 //Problem #4: Winning percentage
   	 String winning=JOptionPane.showInputDialog("Input the amount of times you have won.");
   	 String losing=JOptionPane.showInputDialog("Input the amount of times you have lossed.");
   	 double winning1=Double.parseDouble(winning);
   	 double losing1=Double.parseDouble(losing);
   	 double percentage=winning1/losing1;

   	 NumberFormat formatter=NumberFormat.getCurrencyInstance();
   	 final int DECIMALS=3;
   	 formatter=NumberFormat.getNumberInstance();
   	 formatter.setMaximumFractionDigits(DECIMALS);
   	 formatter.setMinimumFractionDigits(DECIMALS);
   	 System.out.println("I have a win to loss ratio of "+formatter.format(percentage));
  	 
   	 //Problem #5: Sales tax
   	 final double SALES_TAX=0.075;
   	 int carPrice=Integer.parseInt(JOptionPane.showInputDialog("Input the cost of a car."));
   	 double multiply=carPrice*SALES_TAX;
   	 System.out.println("Sales tax is $"+multiply);
  	 
   	 //Problem #6: Test scores
   	 final int NUM_OF_TESTS=3;
   	 double total1=Integer.parseInt(JOptionPane.showInputDialog("Input the score of one test"));
   	 double total2=Integer.parseInt(JOptionPane.showInputDialog("Input the score of a second test"));
   	 double total3=Integer.parseInt(JOptionPane.showInputDialog("Input the score of a third test"));
   	 //Must pare individually
   	 double avg=(total1+total2+total3)/NUM_OF_TESTS;
  	 
   	 NumberFormat avg1=NumberFormat.getCurrencyInstance();
   	 formatter=NumberFormat.getNumberInstance();
   	 formatter.setMaximumFractionDigits(NUM_OF_TESTS);
   	 formatter.setMinimumFractionDigits(NUM_OF_TESTS);
   	 JOptionPane.showMessageDialog(null, "The average of the three tests is "+formatter.format(avg));
  	 
   	 //Problem #7: Rectangle measurements
   	 String length=JOptionPane.showInputDialog("Input the length of a rectangle");
   	 String width=JOptionPane.showInputDialog("Input the width of a rectangle");
   	 double perimeter1=Double.parseDouble(length); //must parse individually
   	 double perimeter2=Double.parseDouble(width);
   	 double perimeter3=(perimeter1+perimeter2)*2;
   	 double area=perimeter1*perimeter2;
   	 JOptionPane.showMessageDialog(null, "The perimeter of the rectangle is "+formatter.format(perimeter3)
   		 +" and the area is "+formatter.format(area));
  	 
   	 //Problem #8: Circles
   	 String radius1=JOptionPane.showInputDialog("Input the radius of a circle");
   	 final double PI=3.14159265;
   	 double radius2=Double.parseDouble(radius1);
   	 double circumference=2*PI*radius2; //circumference
   	 double areaC=PI*(radius2*radius2); //area
   	 JOptionPane.showMessageDialog(null, "The circumference of the circle is "
   		 +formatter.format(circumference)+"and the area is "+formatter.format(areaC));
  	 
   	 //Problem #9: Age (input: days, output: years & days)
   	 final int DAYS_IN_YEAR=365;
   	 int years1=Integer.parseInt(JOptionPane.showInputDialog("Input your age in days"));
   	 //Parentheses is like String
   	 int years2=years1/DAYS_IN_YEAR;
   	 int days=years1%DAYS_IN_YEAR;
   	 JOptionPane.showMessageDialog(null, years1+" years is "+years2+" year(s) and "
   		 +days+" day(s)");
   	 //If use int instead of double, formatter.format() is not needed
  	 
   	 //Problem #10: Age (input: days, output: years, months, & days)
   	 final int DAYS_IN_MONTH=30;
   	 final int MONTHS_IN_YEAR=12;
   	 int years=Integer.parseInt(JOptionPane.showInputDialog("Input your age in days"));
   	 int inYears=years/DAYS_IN_YEAR;
   	 int inMonths=years%MONTHS_IN_YEAR;
   	 int inDays=years%DAYS_IN_MONTH;
  	 
   	 JOptionPane.showMessageDialog(null, years+" days is "+inYears+" years(s), "
   		 +inMonths+"month(s), and "+inDays+" day(s)");
    }
}