import javax.swing.*;
public class StringProgram3
{
    public static void main(String[] args)
    {
   	 System.out.println("**#1**");
   	 String name=JOptionPane.showInputDialog("Enter your name");
   	 int length=name.length();
   	 System.out.println(name+", there are "+length+" letters in your name.");
   	 System.out.println("");
  	 
   	 System.out.println("**#2**");
   	 String animal=JOptionPane.showInputDialog("What is your favorite animal?");
   	 String up=animal.toUpperCase();
   	 System.out.println("Animal in uppercase letters: "+up);
   	 String down=animal.toLowerCase();
   	 System.out.println("Animal in lowercase letters: "+down);
   	 System.out.println("");
  	 
   	 System.out.println("**#3**");
   	 String sportsteam=JOptionPane.showInputDialog("What is your favorite sports team?");
   	 String firstLetter=sportsteam.substring(0,1);
   	 System.out.println("First letter is: "+firstLetter);
   	 String secondLetter=sportsteam.substring(1,2);
   	 System.out.println("Second letter is: "+secondLetter);
   	 String thirdLetter=sportsteam.substring(2,3);
   	 System.out.println("Third letter is: "+thirdLetter);
   	 System.out.println("");
  	 
   	 System.out.println("**#4**");
   	 String artist=JOptionPane.showInputDialog("Who is your favorite artist?");
   	 String beginning=artist.substring(0,1);
   	 String ending=artist.substring(artist.length()-1);
   	 System.out.println("The first and last letters are: "+beginning+ending);
    }
}