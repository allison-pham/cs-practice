import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class MiddleLettersWindow extends JFrame implements ActionListener
{
	private JTextField theWordTextField;
    
	public MiddleLettersWindow()
	{
  	  setSize(400, 100);
  	  setTitle("Remove Middle Letters");
  	  setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
  	 
  	  Container c = getContentPane();
  	 
  	  // The following statements adds a button in the top panel and have this program listen for the button
  	  JPanel topPanel =new JPanel();
  	  JButton removeMiddleLettersButton = new JButton("Remove First & Last Letter");
  	  removeMiddleLettersButton.addActionListener(this);
  	  topPanel.add(removeMiddleLettersButton);
  	 
  	  // The following statements adds to the bottom panel the text change & display
  	  JPanel bottomPanel =new JPanel();
  	  theWordTextField = new JTextField("Enter your word here");
  	  bottomPanel.add(theWordTextField);
  			 
  	  c.setLayout(new GridLayout(2,1));
  	  c.add(topPanel);
  	  c.add(bottomPanel);    
	}
    
	public void actionPerformed(ActionEvent e)
	{
  	  String word = theWordTextField.getText();
  	 
  	  // Add one statement here to reassign word to
  		 // remove the first and last letters
  	  // PUT YOUR CODE HERE
  	  word=word.substring(1,word.length()-1); // removes first and last letters
  	 
  	  theWordTextField.setText(word);
	}

    
	public static void main(String[] args)
	{
  	  MiddleLettersWindow theFrame = new MiddleLettersWindow();	// Create the frame
  	  theFrame.setVisible(true);  								  // Make the frame visible
	}
}