import javax.swing.*;
import java.awt.*;

public class BasicPanel
{
    public static void main(String[] args)
    {
   	 setBackground(Color.PINK);    // Sets the background color of the panel
    }
    
    public void paintComponent(Graphics g)
    {
   	 super.paintComponent(g);   	 // ALWAYS MUST BE THE FIRST LINE!
   	 g.setColor(Color.YELLOW);   	 // Change the writing color to yellow
   	 g.fillOval(150, 100, 30, 30);    // Draw an oval at location (150,100) with a width of 30 pixels and height also 30 pixels
   	 g.setColor(Color.GREEN);   	 // Change the writing color to green
   	 g.fillRect(164, 130, 5, 100);    // Draw a rectangle at location (164,130) with a width 0 5 pixles and length of 100 pixels
   	 g.setColor(Color.BLACK);   	 // Change the writing color to black
   	 g.drawString("A very thin person", 115, 90);    // Draw the String at location (115,90)
    }
}