import javax.swing.*;
import java.awt.*;

public class CoursePanel extends JPanel
{
	// Create variables for the panel to use
	private String name;
	private String period1;
	private String period2;
	private String period3;
	private String period4;
	private String period5;
    
    
	public CoursePanel(String n, String p1, String p2, String p3, String p4, String p5)
	{
  	  setBackground(Color.GREEN);	// Change the background color of the panel to red
  	  // Sets the name and 5 periods
  	  name = n;
  	  period1 = p1;
  	  period2 = p2;
  	  period3 = p3;
  	  period4 = p4;
  	  period5 = p5;
  	 
	}
    
	public void paintComponent(Graphics g)
	{
  	  super.paintComponent(g);  	  // ALWAYS MUST BE THE FIRST LINE!
  	  g.setColor(Color.YELLOW);  	  // Change the writing color to black
  	  g.drawString(name + "'s Schedule", 5, 10);  	  // Write out info at location (5, 10)
  	  g.drawString("Period 1  - " + period1, 5, 20);	// Write out info at location (5, 20)
  	  g.drawString("Period 2  - " + period2, 5, 30);	// Write out info at location (5, 30)
  	  g.drawString("Period 3  - " + period3, 5, 40);	// Write out info at location (5, 40)
  	  g.drawString("Period 4  - " + period4, 5, 50);	// Write out info at location (5, 50)
  	  g.drawString("Period 5  - " + period5, 5, 60);	// Write out info at location (5, 60)
  	 
	}
}