import javax.swing.*;
import java.text.*;
public class Hangman
{
    public static void main(String[] args)
    {
   	 //Notes: String: !input.equals( ) vs. int/double: input!=0
   	 String word=JOptionPane.showInputDialog("Enter in the secret word."); //Secret word (e.g. tree)
   	 String visible=""; //Visible word (e.g. ****)

   	 for(int i=0; i<word.length(); i++)
   	 {
   		 visible+="*";
   	 }
   	 System.out.println(visible);
   	 System.out.println("");

   	 boolean win=false; //Determines if player wins
   	 while(win==false)
   	 {
   		 String guess=JOptionPane.showInputDialog("Guess a letter.");
   		 for(int i=0; i<word.length(); i++)
   		 {
       		 if(guess.equalsIgnoreCase(word.substring(i,i+1)))
           		 visible=visible.substring(0,i)+guess+visible.substring(i+1);
   		 }
   		 System.out.println(visible);
   		 if(visible.equals(word) && win==false)
   		 {
       		 System.out.println("You win!");
       		 win=true;
   		 }
   	 }
    }
}