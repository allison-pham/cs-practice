import javax.swing.*;
import java.text.*;
public class WhileLoop1To3
{
    public static void main(String[] args)
    {
   	 //Problem 1: Sum of odd integers
   	 int prompt=Integer.parseInt(JOptionPane.showInputDialog("Enter in a positive odd integer"));
   	 int sum=0; //It is equal to 0 b/c there is no input at the moment.
   	 int i=1;
   	 while(i<=prompt)
   	 {
   		 sum=sum+i;
   		 i=i+2;
   	 }
   	 System.out.println("The sum of the odd integers from 1 to "+prompt+" is "+sum+".");

   	 //Problem 2: Stars
   	 int input=Integer.parseInt(JOptionPane.showInputDialog("Enter in a number to output stars"));
   	 String stars="*";
   	 int ctr=0;
   	 i=1;
   	 while(i<=input)
   	 {
   		 i=i+1;
   		 System.out.println(stars);
   	 }

   	 //Problem 3: Less than 10
   	 int ask=Integer.parseInt(JOptionPane.showInputDialog("Please enter a number less than 10:"));
   	 while(ask>=10)
   	 {
   		 System.out.println("Invalid, please try again.");
   		 ask=Integer.parseInt(JOptionPane.showInputDialog("Enter a number less than 10:"));
   	 }
   	 System.out.println("Thank you!");
    }
}