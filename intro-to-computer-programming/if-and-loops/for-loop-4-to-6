import javax.swing.*;
import java.text.*;
public class WhileLoop4To6
{
    public static void main(String[] args)
    {
   	 //Problem #4: -1 to stop
   	 int num=Integer.parseInt(JOptionPane.showInputDialog("Input a number"));
   	 int ctr=0;
   	 while(num!=-1)
   	 {
   		 if(num%2!=0)
   		 {
       		 ctr++;
       		 System.out.println("Enter a number or -1 to quit: "+num+".");
   		 }
   		 else if(num%2==0)
       		 System.out.println("Enter a number or -1 to quit: "+num+".");
   		 num=Integer.parseInt(JOptionPane.showInputDialog("Input a number"));
   	 }
   	 System.out.println("You entered "+ctr+" odd numbers.");

   	 //Problem #5: Name
   	 String name=JOptionPane.showInputDialog("Input a name or XXX to stop");
   	 int count=0;
   	 while(!(name.equals("XXX")))
   	 {
   		 if(name.equalsIgnoreCase("Mary"))
       		 count=count+1;
   		 name=JOptionPane.showInputDialog("Input a name or XXX to stop");
   	 }
   	 System.out.println("You entered the name Mary "+count+" times.");

   	 //Problem #6: Number
   	 int number=Integer.parseInt(JOptionPane.showInputDialog("Input a value."));
   	 double positiveSum=0;
   	 double negativeSum=0;
   	 int positiveCount=0;
   	 int negativeCount=0;
   	 String none="none because there were no positve numbers entered";
   	 while(number!=0)
   	 {
   		 if(number>0)
   		 {
       		 positiveCount=positiveCount+1;
       		 positiveSum=(positiveSum+number)/positiveCount;
   		 }
   		 else if(number<0)
   		 {
       		 negativeCount=negativeCount+1;
       		 negativeSum=(negativeSum+number)/negativeCount;
   		 }
   		 else if(!(number>0) && number<0)
   		 {
       		 negativeCount=negativeCount+1;
       		 negativeSum=(negativeSum+number)/negativeCount;
       		 System.out.println("There were no positive numbers entered and the average of the positive numbers is "+positiveSum);
   		 }
   		 else if(!(number<0) && number>0)
   		 {
       		 positiveCount=positiveCount+1;
       		 positiveSum=(positiveSum+number)/positiveCount;
       		 System.out.println("The average of the positive numbers is "+positiveSum+" and there were no negative numbers entered");
   		 }
   		 else if(!(number>0) && !(number<0))
       		 System.out.println("There were no positive or negative numbers entered");
   		 number=Integer.parseInt(JOptionPane.showInputDialog("Input a value."));
   	 }
   	 System.out.println("The average of the positive numbers is "+positiveSum+" and the average of the negative numbers entered is "+negativeSum);
    }
}