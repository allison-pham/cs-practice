public class Farm {
    private Animal[] a = new Animal[3]; //A Farm "HAS A" array of Animal objects
    public Farm() {
   	 a[0] = new NamedCow("cow","Bob", "moo");
   	 a[1] = new Chick("chick", "cheep", "cluck");
   	 a[2] = new Pig("pig","oink");
    }

    public void animalSounds() {
   	 for (int i = 0; i<a.length; i++) {
   		 System.out.println(a[i].getType() + " goes " + a[i].getSound());
   		 //Compile time: a is an Array of Animal objects
   		 //& ALL Animals have a getSound & getType
   		 //Run time: the actual Object will determine which getSound or getType method will be called
   	 }
   	 System.out.println("The cow is known as " + ((NamedCow)a[0]).getName());
    }
}