import java.io.*;
import java.util.*;
//Ignore class labeling (Squeeze2) instead of Squeeze since I made a new project for my corrections
public class SqueezeV2 {
    private Scanner reader;
    private File fileName;
    public SqueezeV2(String fileName) {
   	 try
   	 {
   		 reader = new Scanner(new File(fileName));
   	 }
   	 catch (Exception e)
   	 {
   		 System.out.println("File not found!");
   	 }
    }

    public void squeezeMethod() {
   	 // while(reader.hasNext()) {
   	 while(reader.hasNextLine()) {
   		 int convert = 0;
   		 String temp = reader.nextLine();
   		 //char x = line.charAt(i);
   		 if(temp.length() > 0) {
       		 while(temp.charAt(convert) == ' ') {
           		 convert++;
       		 }
       		 System.out.print(convert + " ");
       		 if(convert > 9) {
           		 System.out.print(" ");
       		 }
   		 }
   		 else
   		 {
       		 System.out.print("0");
   		 }
   		 String ans = temp.substring(convert);
   		 System.out.print(ans);
   		 System.out.println();
   	 }
    }
}