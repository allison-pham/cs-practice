public class Palindrome
{
    public Palindrome() {
    }

    public static void lowerCase(String ch) {
   	 ch=ch.toLowerCase();
    }

    public static boolean Check(String ch) {
   	 ch=ch.toLowerCase();

   	 String backwards="";
   	 boolean palindrome=false;

   	 while(!(ch.equals("q"))) { //q = quit
   		 //Backwards
   		 for(int i=ch.length(); i>0; i--) {  
       		 char check=ch.charAt(i);
       		 backwards+=check;

       		 if ((check >= 'a' && check <= 'z') || (check >= '0' && check <= '9')) {
           		 if(ch.equals(backwards)) {
               		 palindrome=true;
               		 System.out.println("Yes, it's a palindrome.");
           		 }

           		 else
               		 System.out.println("No, it's not a palindrome");
       		 }
   		 }
   	 }

   	 return palindrome;
    }
}