import apcslib.*;
public class Rectangle {
    //Note: Use move & setDirection once each, use forward & turn right
    private double myX;
    private double myY;
    private double myWidth;
    private double myHeight;
    private double perimeter;
    private double area;
    private static DrawingTool pen=new DrawingTool(new SketchPad (500,500));
    public Rectangle() {
   	 double myX=0;
   	 double myY=0;
   	 double myWidth=0;
   	 double myHeight=0;
    }

    public Rectangle(double x, double y, double width, double height) {
   	 myX=x;
   	 myY=y;
   	 myWidth=width;
   	 myHeight=height;
    }

    public double getPerimeter() {
   	 double perimeter=(myWidth*2)+(myHeight*2);
   	 return perimeter;
    }

    public double getArea() {
   	 double area=myWidth*myHeight;
   	 return area;
    }

    public void draw() {
   	 pen.up();
   	 pen.move(myX,myY); //Bottom left
   	 pen.down();
   	 pen.setDirection(0); //*Check to see if direction is correct
   	 //pen.move(myX+myWidth,myY+myHeight); change to forward
   	 pen.forward(myWidth);
   	 pen.turnRight(90);
   	 pen.forward(myHeight);
   	 pen.turnRight(90);
   	 pen.forward(myWidth);
   	 pen.turnRight(90);
   	 pen.forward(myHeight);
    }
}