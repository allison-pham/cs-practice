#1) Problem (smallest number in the list) : Write a function called smallest( numList ) that receives
#a list of numbers and prints the smallest value
def smallest(numList):
    smallest = 0
    if not numList:
        return None
    
    for i in numList:
        if i < smallest:
            smallest = i
            #smallest = numList[i]
    return smallest

my_list = [1, 5, 3, 2, 1]
print(smallest(my_list))